<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/decale_wallp">

    <ImageView
        android:id="@+id/leDecale"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/decale" />
    <ImageButton
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/leDecale"
        android:layout_marginLeft="10dp"
        android:id="@+id/Name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name: "
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Name"
        android:layout_marginLeft="10dp"
        android:id="@+id/lastName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pseudo: "
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/lastName"
        android:layout_marginLeft="10dp"
        android:id="@+id/pseudo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@id/pseudo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/email" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Name"
        android:layout_centerHorizontal="true"
        android:text="name" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/userLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lastName"
        android:layout_alignStart="@+id/userName"
        android:text="last name" />

    <TextView
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/userPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userLastName"
        android:layout_alignTop="@+id/pseudo"
        android:text="pseudo" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignStart="@+id/userPseudo"
        android:text="email"
        android:textColor="#000000"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/UserPAssword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignEnd="@+id/userName"
        android:text="*******"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_above="@+id/myBookings"
        android:layout_alignStart="@+id/myBookings"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_rectangle_shape"
        android:text="Edit Profile"
        android:textSize="20dp" />

    <Button
        android:id="@+id/myBookings"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_rectangle_shape"
        android:text="My bookings"
        android:textSize="20dp" />


</RelativeLayout>