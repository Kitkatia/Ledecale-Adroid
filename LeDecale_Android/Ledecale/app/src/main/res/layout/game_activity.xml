<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/gameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/gamePicture"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamePicture"
        android:layout_centerHorizontal="true"
        android:text="Description"
        android:textColor="#000000"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/gamePicture"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/gameNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDescription"
        android:text="Num Players"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gamePicture" />

    <TextView
        android:id="@+id/gamePlayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDescription"
        android:text="Play Time"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/gameNumPlayers" />

    <TextView
        android:id="@+id/gameAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Age"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/gamePlayTime" />

    <TextView
        android:id="@+id/gamePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gameAge"
        android:text="Price"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/gameAge" />

    <TextView
        android:id="@+id/gameRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gamePrice"
        android:layout_toEndOf="@+id/gameAge"
        android:text="Rate"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/gameWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameAge"
        android:layout_toStartOf="@+id/gameRate"
        android:text="weight"
        android:textColor="#000000"
        />

   <!-- <ListView
        android:id="@+id/gameCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gameRate" />
-->
</RelativeLayout>
    </ScrollView>