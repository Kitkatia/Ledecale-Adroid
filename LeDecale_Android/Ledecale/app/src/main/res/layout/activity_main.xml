<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/decale_wallp"
    tools:context="com.cafe.decale.ledecale.MainActivity">


    <Button
        android:id="@+id/gamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_list"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:background="@drawable/round_shape"
        />

    <Button
        android:id="@+id/eventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/events_list"
        android:textColor="#ffffff"
        android:background="@drawable/round_shape"
        android:layout_above="@+id/gamesButton"
        android:layout_alignStart="@+id/gamesButton"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/newsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_list"
        android:textColor="#ffffff"
        android:background="@drawable/round_shape"
        android:layout_below="@+id/gamesButton"
        android:layout_alignStart="@+id/gamesButton"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/decale"
        android:layout_below="@+id/logout"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/eventsButton" />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logout"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile"
        android:visibility="invisible"/>

</RelativeLayout>
